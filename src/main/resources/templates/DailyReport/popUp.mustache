                        </div>
                    </li>
                </ul>
                <div class="form_btn">
                        <button class="btn_submit" onclick="alert('저장완료호우~!')">저장</button>
                        <button class="btn_back">저장 후 이전</button>
                </div>
            </form>
            <span class="cancel_div">
<!--                <a href="/dailyReport"><button class="btn_cancel">취소</button></a>-->
                <button class="btn_cancel" onclick="recordStart;">취소</button>
            </span>
        </div>
        <footer class="footer">
<!--            <h1 style="background: #333333;">-->
                <img src="/images/erp_logo_white.png">
                <a href="http://www.kiwontech.com" target="_blank" style="color: #FFFFFF;">http://www.kiwontech.com</a>
<!--            </h1>-->
        </footer>
    </div>
</body>
<script src="http://code.jquery.com/jquery-3.5.1.min.js"></script>
<script>
    if ('SpeechRecognition' in window || 'webkitSpeechRecognition' in window){
        const SpeechRecognition = window.SpeechRecognition || window.webkitSpeechRecognition;

        const Images = document.querySelectorAll('.img_mic');
        const textInput = document.querySelectorAll('.textInput');

        Images.forEach((image,idx) => {
            image.addEventListener('click', () => {
                const recognition = new SpeechRecognition();

                recognition.onstart = () => {
                    textInput[idx].value = '음성 입력 중...';
                };

                recognition.onresult = (event) => {
                    const transcript = event.results[0][0].transcript;
                    textInput[idx].value = transcript;
                };

                recognition.start();
            });
        })

    } else{
        alert("이 브라우저는 음성인식을 지원하지 않습니다.");
    }

