        }

        .how_many{
            width: 20%;
        }
        
        /*Footer*/
        .form_btn{
            display: flex;
            justify-content: space-between;
        }
        .form_btn > button{
            width: 30%;
            height: 50px;
            margin: 0 2% 0 2%;
            border-radius: 5px;
            font-weight: bold;
        }
        .btn_submit{
            color: white;
            border: #0069B5;
            background: #0069B5;
        }

        .cancel_div > button{
            width: 30%;
            height: 50px;
            margin-bottom: 5%;
            border-radius: 5px;
            font-weight: bold;
        }

        .btn_cancel{
            border: #E0E0E0;
            background: #E0E0E0;
        }
        
        .btn_back{
            color: white;
            border: #0069B5;
            background: #0069B5;
        }

        .footer{
            display: flex;
            justify-content: start;
            background: #333333;
            font-size: 1rem;
            font-weight: bold;
        }


    /*태블릿*/
        @media all and (min-width: 768px) {
            .header{
                display: flex;
                justify-content: space-between;
                /*margin-top: 5%;*/
                margin: 5% 3% 3% 3%;
                /*margin-bottom: 3%;*/
                padding-bottom: 3%;
                border-bottom: 2px solid #114061;
                font-weight: bold;
                font-size: 1.5rem;
            }

            .calling_icon{
                width: 100%;
                height: 100%;
            }

            .check_box{
                width: 20%;
                /*display: flex;*/
                /*justify-content: start;*/
            }

            .check_box > input{
                width: 40%;
                height: 40%;
            }

            .form_btn > button{
                width: 30%;
                height: 60px;
                border-radius: 5px;
                font-weight: bold;
            }

            .cancel_div > button{
                width: 30%;
                height: 60px;
                margin-bottom: 2%;
                border-radius: 5px;
                font-weight: bold;
            }

            .how_many{
